
def get_factorial(fact_input):                                                  #states function and defines variable

    if fact_input == 0:                                                         #checks for zero variable

        fact_output = fact_input                                                #zero variable creats zero output

    else:                                                                       #all other positive numbers

        fact_output = fact_input * get_factorial(fact_input - 1)                #finds the factorial using function chain and sets it to output

    return fact_output                                                          #retuns output